@using TechJobsPersistent.ViewModels;
@model AddJobViewModel;

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployerId"></label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <span></span>
    </div>

    <div class="form-group">

        @foreach (Skill skill in Model.Skills)
        {
            <input type="checkbox" name="selectedSkills" value="@skill.Id" /> @skill.Name<br />
        }


    </div>

    <input type="submit" value="Add Job" />
</form>
<div>
    <p><a href="/employer/add">Add a new employer to the database.</a></p>
    <p><a href="/skill/add">Add a new link to the database.</a></p>
</div>

@*
    The form to add a job needs to contain all of the skills available as checkboxes so users can include the necessary skills when adding a new job to the db.

*@